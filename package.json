{
  "name": "i18n-quality-lint",
  "version": "1.4.0",
  "description": "Universal i18n quality linter: detect untranslated strings and sync keys across 60+ languages (including Klingon!)",
  "main": "index.js",
  "type": "module",
  "bin": {
    "i18n-quality-lint": "index.js"
  },
  "scripts": {
    "test": "node test.js",
    "test:integration": "node test-integration.js",
    "test:all": "npm test && npm run test:integration",
    "precommit": "npm run test:all",
    "prepublishOnly": "npm run test:all",
    "setup-hooks": "node setup-hooks.js",
    "check": "node index.js",
    "check:save": "node index.js --save",
    "publish:npm": "npm publish"
  },
  "keywords": [
    "i18n",
    "translation",
    "lint",
    "quality",
    "checker",
    "localization",
    "hebrew",
    "arabic",
    "chinese",
    "russian",
    "turkish",
    "vietnamese",
    "bulgarian",
    "ukrainian",
    "hindi",
    "bengali",
    "tamil",
    "persian",
    "urdu",
    "thai",
    "korean",
    "japanese",
    "sync",
    "keys",
    "untranslated",
    "multilingual",
    "internationalization",
    "klingon",
    "elvish",
    "dothraki",
    "fantasy",
    "fun"
  ],
  "author": "Lev Korsunskyi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/levkorsy/i18n-lint.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "index.js",
    "README.md",
    "AI-README.md",
    "LICENSE"
  ]
}
